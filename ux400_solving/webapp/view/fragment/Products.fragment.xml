<c:FragmentDefinition xmlns:c="sap.ui.core"
    xmlns:t="sap.ui.table" controllerName="sap.btp.ux400solving.controller.Main"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">

    <Dialog id="idDialog" contentHeight="40%" contentWidth="90%">
        <content>
            <t:Table id="idTable" rows="{/Products}" selectionMode="MultiToggle" selectionBehavior="Row" visibleRowCount="5" paste="onPaste" ariaLabelledBy="title">
                <t:extension>
                    <OverflowToolbar style="Clear">
                        <Title id="title" text="Products"/>
                    </OverflowToolbar>
                </t:extension>
                <t:columns>
                    <t:Column>
                        <Label text="ProductID" />
                        <t:template>
                            <Input value="{ProductID}" />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="ProductName" />
                        <t:template>
                            <Input value="{ProductName}" />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="SupplierID" />
                        <t:template>
                            <Input value="{SupplierID}" />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="CategoryID" />
                        <t:template>
                            <Input value="{CategoryID}" />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="QuantityPerUnit" />
                        <t:template>
                            <Input value="{QuantityPerUnit}" />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="UnitPrice" />
                        <t:template>
                            <Input value="{UnitPrice}" />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="UnitsInStock" />
                        <t:template>
                            <Input value="{UnitsInStock}" />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="UnitsOnOrder" />
                        <t:template>
                            <Input value="{UnitsOnOrder}" />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="ReorderLevel" />
                        <t:template>
                            <Input value="{ReorderLevel}" />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="Discontinued" />
                        <t:template>
                            <Input value="{
									path : 'Discontinued',
									formatter : '.formatter.transformDiscontinued'
								}" />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="Status" />
                        <t:template>
                            <core:Icon src="{= ${UnitPrice} >= 15 ? 'sap-icon://thumb-up' : 'sap-icon://thumb-down'}" 
                            color="{= ${UnitPrice} >= 15 ? 'rgb(27, 234, 33)' : 'rgb(234, 52, 27)'}" />
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>
        </content>
        <endButton>
            <Button text="닫기" press="onClose" />
        </endButton>
    </Dialog>
</c:FragmentDefinition>