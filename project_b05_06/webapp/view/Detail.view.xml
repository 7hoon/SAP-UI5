<mvc:View controllerName="projectb0506.controller.Detail"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns="sap.m">
	<Page title="Detail Page" showNavButton="true" navButtonPress="onNavMain">
		<VBox class="sapUiSmallMargin">
			<f:SimpleForm id="SimpleFormDisplay1" editable="false" layout="ColumnLayout" title="Order( {OrderID} )">
				<f:content>
					<Label text="OrderID" />
					<Text text="{OrderID}" />
					<Label text="CustomerID." />
					<Text text="{CustomerID}" />
					<Label text="EmployeeID" />
					<Text text="{EmployeeID}" />
					<Label text="OrderDate" />
					<Text text="{path : 'OrderDate',
								 type : 'sap.ui.model.type.Date',
								 formatOptions : {
									pattern : 'yyyy-MM-dd'
								 }  }" />
					<Label text="RequiredDate" />
					<Text text="{path : 'RequiredDate', formatter : '.formatter.fnDateString' }" />
					<Label text="ShippedDate" />
					<Text text="{path : 'ShippedDate', formatter : '.formatter.fnDateString' }" />
					<Label text="ShipVia" />
					<Text text="{ShipVia}" />
					<Label text="Freight" />
					<Text text="{Freight}" />
					<Label text="ShipName" />
					<Text text="{ShipName}" />
					<Label text="ShipAddress" />
					<Text text="{ShipAddress}" />
					<Label text="ShipCity" />
					<Text text="{ShipCity}" />
					<Label text="ShipRegion" />
					<Text text="{ShipRegion}" />
					<Label text="ShipPostalCode" />
					<Text text="{ShipPostalCode}" />
					<Label text="ShipCountry" />
					<Text text="{ShipCountry}" />
				</f:content>
			</f:SimpleForm>
			<Table id="idOrderDetailsTable" mode="SingleSelectMaster" items="{Order_Details}" selectionChange="onSelectionChange" class="sapFDynamicPageAlignContent" width="auto">
				<headerToolbar>
					<Toolbar>
						<Title text="Order_Details ( {OrderID} )" level="H2"/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column width="12em">
						<Text text="Product" />
					</Column>
					<Column width="12em">
						<Text text="ProductID" />
					</Column>
					<Column width="12em">
						<Text text="UnitPrice" />
					</Column>
					<Column width="12em">
						<Text text="Quantity" />
					</Column>
					<Column width="12em">
						<Text text="Discount" />
					</Column>
				</columns>
				<items>
					<ColumnListItem >
						<cells>
							<Text text="{OrderID}" />
							<Text text="{ProductID}" />
							<Text text="{UnitPrice}" />
							<Text text="{Quantity}" />
							<Text text="{Discount}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</VBox>
	</Page>
</mvc:View>
