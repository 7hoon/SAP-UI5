<mvc:View controllerName="exam.exprogramb05.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:t="sap.ui.table"
    xmlns="sap.m">
    <Page id="page" title="항공편 예약 상세" showNavButton="true" navButtonPress="onNavMain">
        <content>
        <t:Table id="idTable" 
            rows="{toFlight>/to_Flight/results}" 
            selectionMode="Single" 
            selectionBehavior="RowOnly" 
            ariaLabelledBy="title">

                <t:extension>
                    <OverflowToolbar style="Clear">
                        <Title id="title" text="Flight List"/>
                    </OverflowToolbar>
                </t:extension>

                <t:columns>
                    <t:Column>
                        <Label text="CARRID" />
                        <t:template>
                            <Text text="{toFlight>CARRID}" />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="CONNID" />
                        <t:template>
                            <Text text="{toFlight>CONNID}" />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="FLDATE" />
                        <t:template>
                            <Text text="{
									path : 'toFlight>FLDATE',
									formatter : '.formatter.fnDateString'
                                    }" />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="PRICE" />
                        <t:template>
                            <Text text="{toFlight>PRICE}" />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="CURRENCY" />
                        <t:template>
                            <Text text="{toFlight>CURRENCY}" />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="PLANETYPE" />
                        <t:template>
                            <Text text="{toFlight>PLANETYPE}" />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="SEATSMAX" />
                        <t:template>
                            <Text text="{toFlight>SEATSMAX}" />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="SEATSOCC" />
                        <t:template>
                            <Text text="{toFlight>SEATSOCC}" />
                        </t:template>
                    </t:Column>
                </t:columns>

            </t:Table>
        </content>
    </Page>
</mvc:View>