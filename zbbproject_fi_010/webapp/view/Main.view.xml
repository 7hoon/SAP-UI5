<mvc:View controllerName="zbbprojectfi010.controller.Main"
  xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="부서 조회">
        <HBox class="sapUiSmallMarginTop" width="auto">
            <VBox width="20%" class="sapUiSmallMarginTop">
                <Label text="부서ID" />
                <Input id="idInput1" placeholder="값을 입력하세요" />
                <Label text="부서이름" />
                <Input id="idInput2" placeholder="값을 입력하세요" />
                <Button text="Search" type="Emphasized" press="onSearch" width="100%" />
            </VBox>
            <VBox width="80%">
                <Table id="idTable" mode="SingleSelectMaster" items="{/ZBB_FIT060Set}"
                    selectionChange="onSelectionChange" width="auto" fixedLayout="false"
                    class="sapUiSmallMarginBegin">

                    <headerToolbar>
                        <OverflowToolbar>
                            <content>
                                <Title text="부서 테이블" level="H2" />
                            </content>
                        </OverflowToolbar>
                    </headerToolbar>

                    <columns>
                        <Column width="12em">
                            <Text id="txtBold" text="부서ID" />
                        </Column>
                        <Column width="12em">
                            <Text text="부서이름" />
                        </Column>
                        <Column width="12em">
                            <Text text="삭제여부" />
                        </Column>
                    </columns>

                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text id="txtBold2" text="{path: 'Dptid'}" class="bold" />
                                <Text text="{Dptnm}" />
                                <Text text="{Delect}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </HBox>
    </Page>
</mvc:View>
