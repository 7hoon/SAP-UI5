<mvc:View xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.uxap"
	xmlns:layout="sap.ui.layout"
	xmlns:m="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core" controllerName="sap.btp.ux410solving.controller.Detail" height="100%">
	<ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<heading>
					<m:Title text="Viz Frame" wrapping="false"/>
				</heading>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<sections>
			<ObjectPageSection titleUppercase="false">
				<subSections>
					<ObjectPageSubSection title="Info" mode="Expanded" titleUppercase="false">
						<blocks>
							<f:SimpleForm id="idSimpleForm" editable="false" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
								<f:content>
									<m:Label text="OrderID" />
									<m:Text text="{OrdersDetails>/OrderID}" />
									<m:Label text="ProductID" />
									<m:Text text="{OrdersDetails>/ProductID}" />
									<m:Label text="UnitPrice" />
									<m:Text text="{OrdersDetails>/UnitPrice}" />
									<m:Label text="Quantity" />
									<m:Text text="{OrdersDetails>/Quantity}" />
									<m:Label text="Discount" />
									<m:Text text="{OrdersDetails>/Discount}" />
								</f:content>
							</f:SimpleForm>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
	</ObjectPageLayout>

</mvc:View>