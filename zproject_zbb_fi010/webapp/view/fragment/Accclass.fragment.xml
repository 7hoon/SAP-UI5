<c:FragmentDefinition xmlns:c="sap.ui.core"
  xmlns:t="sap.ui.table"
  controllerName="zprojectzbbfi010.controller.Main"
  xmlns="sap.m">

  <Dialog id="idDialog" title="Hello Dialog"
    beforeOpen="onBeforeOpen"
    resizable="true"
    draggable="true"
    contentHeight="50%"
    contentWidth="40%">
    <content>
      <t:Table id="idOrderTable"
        rows="{main>/list}"
        selectionMode="Single"
        selectionBehavior="RowSelector"
        paste="onPaste"
        ariaLabelledBy="title"
        rowSelectionChange="OnrowSelectionChange1">
        <!-- rows="{
					path: '/Orders',
					filters : [{
						path: 'EmployeeID',
						operator : 'EQ',
						value1 : '4',
						value2 : ''
					}, {
						path: 'CustomerID',
						operator: 'Contains',
						value1 : 'R'
					}]
					}" -->
        <t:extension>
          <OverflowToolbar style="Clear">
            <Title id="title" text="Products" />
          </OverflowToolbar>
        </t:extension>
        <t:columns>
          <t:Column>
            <Label text="Product" />
            <t:template>
              <Input value="{home}" />
            </t:template>
          </t:Column>
          <t:Column>
            <Label text="Customer" />
            <t:template>
              <Input value="{Accclass}" />
            </t:template>
          </t:Column>
        </t:columns>
      </t:Table>
    </content>
    <endButton>
      <Button text="Close" press="onClose" />
    </endButton>
  </Dialog>
</c:FragmentDefinition>